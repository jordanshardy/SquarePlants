<h1 id="heading" class="text-center mt-4">Public Posts</h1>

<% @posts.each do |post| %>
<div class="column">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= post.name %></h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= post.grow_medium %></li>
        <li class="list-group-item"><%= post.room_type %></li>
      </ul>
      <div class="card-body">
        <%= link_to "See Post", post_path(post), class: "btn btn-outline-success" %>
        <%= link_to "See Clones", post_path(post), class: "btn btn-outline-success" %>
      </div>
    </div>
</div>
<% end %>


<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Age</th>
      <th>Grow medium</th>
      <th>Training method</th>
      <th>Light type</th>
      <th>Room type</th>
      <th>Watering</th>
      <th>Strain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.age %></td>
        <td><%= post.grow_medium %></td>
        <td><%= post.training_method %></td>
        <td><%= post.light_type %></td>
        <td><%= post.room_type %></td>
        <td><%= post.watering %></td>
        <td><%= post.strain %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
