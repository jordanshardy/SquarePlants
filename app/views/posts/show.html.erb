<h2 class="text-center mt-4"><%= @post.name %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
        <%= image_tag @post.picture, class: "card-img top thumbnail" if @post.picture.attached? %>
        </div>
          <div class="card-body">
            <p>Category: <%= @post.category.category %></p>
            <ul>
              <strong>Name:</strong>
              <%= @post.name %> |
              <strong>Age:</strong>
              <%= @post.age %> |
              <strong>Grow medium:</strong>
              <%= @post.grow_medium %> |
              <strong>Light type:</strong>
              <%= @post.light_type %> |
              <strong>Watering:</strong>
              <%= @post.watering %>
            </ul>
            <div class="card-text text-center"><%= simple_format(@post.content) %></div>
            <%=link_to "Edit", edit_post_path(@post.id), class: "btn btn-warning mr-3 text-white" if current_user && current_user.id == @post.user_id%>
            <%=link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-danger mr-3 text-white" if current_user && current_user.id == @post.user_id%>
          </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@post.created_at) %> ago, 
          edited <%= time_ago_in_words(@post.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>