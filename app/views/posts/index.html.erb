<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Age</th>
      <th>Grow medium</th>
      <th>Training method</th>
      <th>Light type</th>
      <th>Room type</th>
      <th>Watering</th>
      <th>Strain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= post.age %></td>
        <td><%= post.grow_medium %></td>
        <td><%= post.training_method %></td>
        <td><%= post.light_type %></td>
        <td><%= post.room_type %></td>
        <td><%= post.watering %></td>
        <td><%= post.strain %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
